  rnd_oracle (12,1,5,=) (tagk -> tagk + A*i) _. _: //; //=.
  swap_main (12,1,5) B. swap B (2).
  
  
  (A -> A*(ci - KeyGen1`i) + KeyGen1`tagk) _. _: //; //=.
  
  dist_sym. rnd! tagc (A -> A*(ci - KeyGen1`i) + KeyGen1`tagk) _. _: //; //=.
assert beta (KeyGen1`i<>ci). bycrush. dist_sym.


  
  _: abstract 1 arg (). _: abstract _ res _.  _: assumption_decisional dkill <- [arg] B. _: //; //=.
  _: abstract 1 arg (). _: abstract _ res _.  _: assumption_decisional dkill <- [arg] A. _: //; //=.
  _: swap [c1 c2] b1.

  (* b = b1 in DLIN *)
  _: rename b b1. _: swap b1 (1).
  rename v b2.
  except a1 [0]. except a2 [0].
  rnd! b2 (b2 -> b2*-a1*a2) _. _: //; //=.
  
  (* introduce remaining variables c1 and c2 from assumption. *)
  _: abstract 1 arg (). _: abstract _ res _.  _: assumption_decisional dkill <- [arg] c2. _: //; //=.
  _: abstract 1 arg (). _: abstract _ res _.  _: assumption_decisional dkill <- [arg] c1. _: //; //=.
