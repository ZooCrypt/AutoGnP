<!-- -*- Mode: Xml -*- -->
<ocsigen>
  <server>
    <port>7777</port>

    <logdir>%%PREFIX%%/data/log/ocsigenserver</logdir>
    <datadir>%%PREFIX%%/data/lib/ocsigenserver</datadir>

    <extension findlib-package="ocsigenserver.ext.ocsipersist-dbm">
      <store dir="%%PREFIX%%/data/lib/ocsigenserver"/>
      <ocsidbm name="%%OPAM%%/system/lib/ocsigenserver/extensions/ocsidbm"/>
    </extension>

    <charset>utf-8</charset>

    <findlib path="%%OPAM%%/system/lib"/>

    <extension findlib-package="ocsigenserver.ext.staticmod"/>
    <extension findlib-package="eliom.server"/>
    <extension findlib-package="yojson"/>
    <extension findlib-package="sexplib"/>

    <host hostfilter="*">
      <site path="/tutor/jq">
        <eliom module="%%PREFIX%%/_build/tutor.cma" />
      </site>
      
      <site path="/tutor/">
        <static dir="%%PREFIX%%/web/app" />
      </site>
    </host>

  </server>
</ocsigen>
